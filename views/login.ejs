      <div class="body">
        <form class="form" style="width:300px ;" action="/" method="post">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" name="email" placeholder="name@example.com">
      <label for="floatingInput">Email address</label>
      <p class="valid"><%= email%></p>
    </div>
    <%var email,pass,title;%>
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" name="pass" placeholder="Password">
      <label for="floatingPassword">Password</label>
      <p class="valid"><%= pass%></p>
    </div>
    <div >
      <button type="submit" id="btn" class="btn btn-primary btn-block mb-4">Log in</button>
    </div>
   

  </form>
  </div>
    </div>

